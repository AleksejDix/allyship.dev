    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "color-blindness",
    "color-vision",
    "accessibility",
    "a11y",
    "protanopia",
    "deuteranopia",
    "tritanopia",
    "achromatopsia",
    "simulator",
    "design-tools"
  ],
  "license": "MIT",
  "author": "Allyship.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allyship-dev/allyship.dev.git",
    "directory": "packages/color-vision-simulator"
