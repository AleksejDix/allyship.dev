{
  "name": "allystudio",
  "displayName": "Allyship",
  "version": "0.0.1",
  "description": "Plasmo extension using shadcn example",
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "packageManager": "pnpm@8.15.3",
  "scripts": {
    "dev": "pnpm run clean && plasmo dev --verbose",
    "preview": "plasmo build && echo '\nTo preview: \n1. Open Chrome\n2. Go to chrome://extensions\n3. Enable Developer Mode\n4. Click \"Load unpacked\"\n5. Select the \"build\" directory'",
    "build": "pnpm run clean && plasmo build",
    "package": "plasmo package",
    "clean": "rm -rf build",
    "setup": "sh scripts/copy-ui.sh"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.9.0",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "1.1.2",
    "@supabase/supabase-js": "^2.39.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.474.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "10.4.17",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "sidePanel",
      "tabs",
      "activeTab",
      "windows",
      "scripting"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "options.html",
          "sidepanel.html"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
