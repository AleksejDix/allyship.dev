{
  "name": "AllyStudio",
  "displayName": "AllyStudio",
  "version": "0.0.1",
  "description": "Accessibility Auditing Tool",
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "type": "module",
  "scripts": {
    "dev": "yarn run clean && plasmo dev --verbose",
    "dev:chrome": "yarn run clean && plasmo dev --verbose",
    "dev:firefox": "yarn run clean && plasmo dev --target=firefox-mv2 --verbose",
    "dev:safari": "yarn run clean && plasmo dev --target=safari-mv3 --verbose",
    "preview": "plasmo build && echo '\nTo preview: \n1. Open Chrome\n2. Go to chrome://extensions\n3. Enable Developer Mode\n4. Click \"Load unpacked\"\n5. Select the \"build\" directory'",
    "build": "yarn run clean && plasmo build",
    "build:chrome": "yarn run clean && plasmo build",
    "build:firefox": "yarn run clean && plasmo build --target=firefox-mv2",
    "build:safari": "yarn run clean && plasmo build --target=safari-mv3",
    "package": "plasmo package",
    "package:chrome": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv2",
    "package:safari": "plasmo package --target=safari-mv3",
    "clean": "rm -rf build",
    "setup": "sh scripts/copy-ui.sh",
    "test": "vitest run"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.9.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-aspect-ratio": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-context-menu": "^2.2.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@supabase/supabase-js": "^2.39.3",
    "@uidotdev/usehooks": "2.4.1",
    "@xstate/react": "^4.1.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.474.0",
    "optional": "^0.1.4",
    "plasmo": "^0.90.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "1.0.7",
    "tldts": "^6.1.11",
    "xstate": "^5.19.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@workspace/eslint-config": "*",
    "@workspace/typescript-config": "*",
    "autoprefixer": "10.4.17",
    "jsdom": "^26.0.0",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vitest": "^1.3.1"
  },
  "manifest": {
    "permissions": [
      "sidePanel",
      "activeTab",
      "tabs",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
}
