    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vitest": "^3.0.7"
  },
  "manifest": {
    "permissions": [
      "sidePanel",
      "activeTab",
      "tabs",
      "scripting",
      "storage"
