    "@allystudio/element-inspector": "^0.1.0",
    "@allystudio/element-outliner": "^0.1.0",
    "@allystudio/focus-order-visualizer": "^1.0.0",
    "@allystudio/test": "^0.9.0-beta.1",
    "@allystudio/url-utils": "^1.0.0",
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.9.0",
    "@radix-ui/react-accordion": "^1.2.3",
