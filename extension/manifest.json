{
  "manifest_version": 3,
  "name": "AllyStudio",
  "version": "1.0",
  "description": "Visual accessibility inspector and editor",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/overlay.js",
        "lib/highlighter.js",
        "components/Sidebar.js",
        "tools/landmarks.js",
        "styles/main.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
